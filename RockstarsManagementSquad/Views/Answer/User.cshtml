@model AnswerUserViewModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <h1>@Model.rockstar.username</h1>
    <form asp-controller="Squads" asp-action="Info">
        <input style="display: none;" name="id" value="@Model.rockstar.squadid"></input>
        <input type="submit" name="Info" value="Back" class="btn btn-dark"></input>
    </form>
</head>
        <table class="table">
                <tdead>
                    <tr>
                        <th>QuestionID</th>
                        <th>Question</th>
                        <th>Answer</th>
                        <th>Comment</th>
                    </tr>
                </tdead>
                <tbody>
                    @foreach (var item in Model.answers)
                    {
                        <tr>
                            <td>@item.id</td>
                            <td>@item.question</td>
                            <td>@item.answerText</td>
                            <td>@item.comment</td>
                        </tr>
                    }
                </tbody>
            </table>
</html>