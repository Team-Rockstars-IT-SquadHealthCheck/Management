@model IEnumerable<RockstarsManagementSquad.Models.SurveyViewModel>
@{
    ViewData["Title"] = "Surveys";
}

<div class="text-start">
    <form asp-controller="Surveys" asp-action="CreateSurveyLink">
        <input type="text" name="squadId" placeholder="Squad" value="1" />
        <br />
        <input type="submit" name="submit" value="Submit" />
    </form>
</div>

<div>
    <br />
    <br />
    <table class="table">
        <tdead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
            </tr>
        </tdead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.name</td>
                    <td>@item.description</td>
                </tr>
            }
        </tbody>
    </table>
</div>
